---
export interface Props {
	title?: string;
}

const { title = "The Daily Pulse" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
		{import.meta.env.DEV && (
			<script is:inline>
				(() => {
					if (typeof window === "undefined" || !window.customElements) {
						return;
					}
					const applyPatch = () => {
						const Toolbar = window.customElements.get("astro-dev-toolbar");
						if (!Toolbar || Toolbar.prototype.__builderPatched) {
							return;
						}
						const originalInit = Toolbar.prototype.init;
						const originalGetAppTemplate = Toolbar.prototype.getAppTemplate;
						Toolbar.prototype.init = function (...args) {
							if (Array.isArray(this.apps)) {
								this.apps = this.apps.filter(
									(app) => app && typeof app.id === "string"
								);
							} else {
								this.apps = [];
							}
							return originalInit.apply(this, args);
						};
						Toolbar.prototype.getAppTemplate = function (app) {
							if (!app || typeof app.id !== "string") {
								console.warn("[astro-dev-toolbar] Skipping app with invalid metadata.", app);
								return "";
							}
							return originalGetAppTemplate.call(this, app);
						};
						Toolbar.prototype.__builderPatched = true;
					};
					if (window.customElements.get("astro-dev-toolbar")) {
						applyPatch();
					} else if (window.customElements.whenDefined) {
						window.customElements
							.whenDefined("astro-dev-toolbar")
							.then(applyPatch)
							.catch(() => {});
					}
				})();
			</script>
		)}
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		line-height: 1.5;
		-webkit-font-smoothing: antialiased;
	}
</style>
